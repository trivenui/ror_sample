<h1>New Product</h1>
<%= form_for @product do |f|%>
<table>
	<tr>
		<td>Name</td>
		<td><%= f.text_field :name %></td>
	</tr>

	<tr>
	<td>Description</td>
		<td><%= f.text_area :description %></td>
	</tr>

	<tr>
		<td>Amount</td>
		<td><%= f.text_field :amount %></td>
	</tr>

	<tr>
		<td>Status</td>
		<td><%= f.select :status, options_for_select([["Available"], ["Not Available"]])%></td>
	</tr>

</table>
<%= f.submit %>
<% end %>